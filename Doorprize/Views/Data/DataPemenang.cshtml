
@{
    ViewBag.Title = "Data Pemenang";
    ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
}

<div class="content">
    <div class="col-md-12">
        <div class="card full-height">
            <div class="card-body">
                <div class="card-title">Data Pemenang</div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblPemenang" class="display table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>Hadiah</th>
                                <th>Nrp</th>
                                <th>Nama</th>
                                <th>Dept</th>
                                <th>Jabatan</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblPemenang').dataTable({
            ajax: "@ViewBag.pathParent/Data/ListPemenang",
            dom: 'Bfrtip',
            buttons: [
                'excel'
            ],
            columns: [
                       { "data": "HADIAH" },
                       { "data": "NRP" },
                       { "data": "NAMA" },
                       { "data": "DEPT" },
                       { "data": "JABATAN" },
            ]
        });
    });
</script>

